@model BookModel
    <div class="card mb-4 shadow-sm">
        <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/bookcard.jpg" : Model.CoverImageUrl)" class="img-thumbnail" />
        <div class="card-body">
            <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : Model.Title)</h3>
            <p class="card-text">@Model.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id"
                       class="btn btn-sm btn-outline-danger">View Details</a>
                </div>
                <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "NA" : Model.Author)</small>
            </div>
        </div>
    </div>